<h4>Find Your Match</h4>

<div id="filter-form">
    {{> profile-filter}}
</div>

<div id="dog-results" class="active" style="margin-right: 30px;">

    <table id="dog-table">
        <tbody>
            {{#each all_dogs}}
                <tr class="collection">
                    <td class="image"><img src="{{this.image}}" class="circle" height="120px" width="120px"></td>
                    <td class="dog_name"><h5>{{this.dog_name}}</h5></td>
                    <td class="zip-code"><i class="material-icons dd-icon-text-align">place</i>{{this.zip_code}}</td>
                    <td class="sex">{{this.sex}}</td>
                    <td class="size">{{this.size}}</td>
                    <td class="energy_level">{{this.energy_level}}</td>
                    <td class="send"><a class="modal-trigger tooltipped" data-delay="50" data-tooltip="Nearby Dog Parks" data-position="bottom" href="#modal1" onclick="displayParks()"><i class="material-icons">terrain</i></a></td> 
                    <td class="send"><a class="tooltipped" data-delay="50" data-tooltip="Email to Meet" data-position="bottom" href="mailto:doggydogg@gmail.com"><i class="material-icons">send</i></a></td>
                </tr>
            {{/each}}
        </tbody>
    </table>

  <!-- Modal Structure -->
  <div id="modal1" class="modal">
    <div class="modal-content">

        <h4>Dog Parks Near {{this.dog_name}}</h4>
        <form action="/yelp-results" method="POST">
            <div class="row">
                <div class="input-field col s6">
                  <input placeholder="92126" value="" id="zip_code" name="zip_code" type="text" class="validate">
                  <label class="active" for="zip_code">Search By Zip Code</label>
                </div>
                <input class="btn btn-default blue" type="submit" value="Submit">
          </div>
                
        </form>
